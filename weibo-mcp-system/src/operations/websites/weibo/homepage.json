{
  "website": "weibo",
  "page": "homepage",
  "description": "微博首页链接提取配置",
  "urlPattern": "https?://weibo\\.com(/.*)?",
  "operations": [
    {
      "name": "查找链接容器",
      "atomicOperation": "find_element",
      "selector": "div[node-type='feed_list']",
      "outputKey": "feed_container"
    },
    {
      "name": "提取所有链接",
      "atomicOperation": "extract_attribute",
      "selector": "div[node-type='feed_list'] a[href]",
      "parameters": {
        "attribute": "href",
        "multi": true
      },
      "outputKey": "all_links"
    },
    {
      "name": "提取链接文本",
      "atomicOperation": "extract_text",
      "selector": "div[node-type='feed_list'] a[href]",
      "parameters": {
        "multi": true,
        "trim": true
      },
      "outputKey": "link_texts"
    },
    {
      "name": "提取用户信息",
      "atomicOperation": "extract_text",
      "selector": "div[class*='feed_user'] a",
      "parameters": {
        "multi": true,
        "trim": true
      },
      "outputKey": "user_info"
    }
  ],
  "workflows": [
    {
      "name": "快速链接提取",
      "description": "快速提取微博首页的所有链接",
      "steps": [
        {
          "operationName": "提取所有链接",
          "parameters": {
            "maxCount": 50
          }
        }
      ]
    },
    {
      "name": "用户信息提取",
      "description": "提取微博首页的用户信息",
      "steps": [
        {
          "operationName": "提取用户信息",
          "parameters": {
            "maxUsers": 20
          }
        }
      ]
    },
    {
      "name": "完整分析",
      "description": "完整的微博首页内容分析",
      "steps": [
        {
          "operationName": "查找链接容器"
        },
        {
          "operationName": "提取所有链接",
          "parameters": {
            "maxCount": 100
          },
          "condition": "feed_container.found"
        },
        {
          "operationName": "提取用户信息",
          "parameters": {
            "maxUsers": 30
          }
        }
      ]
    }
  ]
}