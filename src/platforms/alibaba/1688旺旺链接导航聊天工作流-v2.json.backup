{
  "name": "1688旺旺链接导航聊天工作流v2",
  "description": "基于成功的批量聊天工作流，使用多节点结构实现链接提取和导航",
  "version": "2.0.0",
  "preflows": ["1688-login-preflow-simple"],
  "nodes": [
    { "id": "start", "type": "StartNode", "name": "开始", "next": ["attach"] },
    {
      "id": "attach",
      "type": "AttachSessionNode",
      "name": "会话接力",
      "config": {},
      "next": ["navigate_search"]
    },
    {
      "id": "navigate_search",
      "type": "NavigationNode",
      "name": "导航到搜索结果页",
      "config": {
        "url": "https://s.1688.com/selloffer/offer_search.htm?keywords=%B7%FE%D7%B0",
        "waitUntil": "domcontentloaded",
        "timeout": 30000
      },
      "next": ["wait_search"]
    },
    {
      "id": "wait_search",
      "type": "WaitNode",
      "name": "等待搜索结果加载",
      "config": { "minMs": 3000, "maxMs": 5000 },
      "next": ["extract_merchant_data"]
    },
    {
      "id": "extract_merchant_data",
      "type": "PageSnapshotNode",
      "name": "提取商家数据",
      "config": {
        "script": "console.log('🔍 提取第一个商家数据...'); const offerItems = document.querySelectorAll('.sm-offer-item, .offer-item, .sm-offer, [class*=offer]'); console.log('找到 ' + offerItems.length + ' 个商品项'); for (let i = 0; i < Math.min(1, offerItems.length); i++) { const item = offerItems[i]; const title = item.querySelector('h4, [class*=title], a[title]'); const wangwangSpan = item.querySelector('span.J_WangWang, span[class*=WangWang]'); const wangwangLink = wangwangSpan ? wangwangSpan.querySelector('a.ww-link') : null; if (wangwangLink && wangwangLink.href) { const merchantName = wangwangSpan.getAttribute('data-nick') || '未知商家'; const decodedName = decodeURIComponent(merchantName); console.log(`找到商家: ${decodedName}`); console.log(`旺旺链接: ${wangwangLink.href}`); const merchants = [{ index: i, merchantName: decodedName, title: title ? title.textContent.trim().substring(0, 50) : '', chatUrl: wangwangLink.href, hasWangWang: true, realChatUrl: wangwangLink.href, merchantLink: wangwangLink.href }]; return { success: true, merchants: merchants, totalFound: offerItems.length, timestamp: new Date().toISOString() }; } } return { success: false, error: '未找到有效的旺旺链接', timestamp: new Date().toISOString() };",
        "saveScreenshots": true
      },
      "next": ["process_single_merchant"]
    },
    {
      "id": "process_single_merchant",
      "type": "PageSnapshotNode",
      "name": "处理单个商家",
      "config": {
        "script": "console.log('🔄 处理单个商家...'); const batchData = arguments[0] || {}; const merchants = batchData.merchants || []; const currentIndex = 0; const currentMerchant = merchants[currentIndex]; console.log(`处理商家 ${currentIndex + 1}/${merchants.length}: ${currentMerchant.title.substring(0, 30)}`); return { success: true, currentMerchant: currentMerchant, currentIndex: currentIndex, merchants: merchants, totalToProcess: merchants.length, timestamp: new Date().toISOString() };",
        "saveScreenshots": true
      },
      "next": ["navigate_to_chat"]
    },
    {
      "id": "navigate_to_chat",
      "type": "NavigationNode",
      "name": "导航到聊天页面",
      "config": {
        "url": "{{currentMerchant.realChatUrl || currentMerchant.merchantLink}}",
        "waitUntil": "domcontentloaded",
        "timeout": 20000
      },
      "next": ["wait_chat_ready"]
    },
    {
      "id": "wait_chat_ready",
      "type": "WaitNode",
      "name": "等待聊天界面准备",
      "config": { "minMs": 3000, "maxMs": 5000 },
      "next": ["send_chat_message"]
    },
    {
      "id": "send_chat_message",
      "type": "ChatHighlightOnlyNode1688",
      "name": "发送聊天消息(MOCK)",
      "config": {
        "hostFilter": "air.1688.com",
        "message": "你好，请问这个产品有现货吗？现在下单有优惠吗？",
        "highlightMs": 3000,
        "mock": true
      },
      "next": ["save_results"]
    },
    {
      "id": "save_results",
      "type": "ResultSaverNode",
      "name": "保存结果",
      "config": {
        "outputDir": "workflows/records",
        "filenameTemplate": "1688-wangwang-navigation-chat-v2-{timestamp}.json",
        "includeMetadata": true
      },
      "next": ["end"]
    },
    {
      "id": "end",
      "type": "EndNode",
      "name": "结束",
      "config": { "cleanup": false, "saveLogs": true }
    }
  ],
  "globalConfig": {
    "logLevel": "info",
    "screenshotOnError": true,
    "autoCleanup": false,
    "parallelExecution": false,
    "timeout": 300000
  }
}