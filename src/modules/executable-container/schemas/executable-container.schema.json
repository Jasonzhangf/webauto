{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Executable Container Runtime Extension",
  "type": "object",
  "properties": {
    "runtime": {
      "type": "object",
      "properties": {
        "events": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "node": { "type": "string" },
              "params": { "type": "object", "additionalProperties": true },
              "guards": { "type": "object", "additionalProperties": true }
            },
            "required": ["name", "node"]
          }
        },
        "operations": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "key": { "type": "string" },
              "label": { "type": "string" },
              "event": { "type": "string" },
              "node": { "type": "string" },
              "params": { "type": "object", "additionalProperties": true }
            },
            "required": ["key", "label"]
          }
        },
        "flags": {
          "type": "object",
          "properties": {
            "placeholder": { "type": "boolean" }
          }
        }
      },
      "required": ["events", "operations"]
    },
    "relationships": {
      "type": "object",
      "properties": {
        "parentCandidates": { "type": "array", "items": { "type": "string" } }
      }
    }
  }
}

