{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://webauto/containers/container.v2.schema.json",
  "title": "ContainerDefV2",
  "type": "object",
  "required": ["id", "selectors"],
  "properties": {
    "id": { "type": "string" },
    "name": { "type": "string" },
    "type": { "type": "string" },
    "scope": { "type": "string" },
    "pagePatterns": { "type": "array", "items": { "type": "string" } },
    "selectors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["classes"],
        "properties": {
          "classes": { "type": "array", "items": { "type": "string" } },
          "variant": { "enum": ["primary", "backup"] },
          "score": { "type": "number", "minimum": 0, "maximum": 1 }
        }
      }
    },
    "children": { "type": "array", "items": { "type": "string" } },
    "dependsOn": { "type": "array", "items": { "type": "string" } },
    "capabilities": { "type": "array", "items": { "type": "string" } },
    "runMode": { "enum": ["sequential", "parallel"] },
    "operations": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type"],
        "properties": {
          "type": { "enum": ["find-child", "click", "scroll", "type", "waitFor", "custom"] },
          "config": { "type": "object" }
        }
      }
    },
    "pagination": {
      "type": "object",
      "required": ["mode"],
      "properties": {
        "mode": { "enum": ["scroll", "click"] },
        "targetSelector": {
          "type": "object",
          "properties": {
            "classes": { "type": "array", "items": { "type": "string" } },
            "variant": { "enum": ["primary", "backup"] },
            "score": { "type": "number", "minimum": 0, "maximum": 1 }
          },
          "required": ["classes"],
          "additionalProperties": false
        },
        "maxSteps": { "type": "number", "minimum": 1 },
        "delayMs": { "type": "number", "minimum": 0 }
      },
      "additionalProperties": false
    },
    "version": { "type": "string" },
    "replacedBy": { "type": "string" },
    "reliability": { "type": "number", "minimum": 0, "maximum": 1 }
  },
  "additionalProperties": false
}

