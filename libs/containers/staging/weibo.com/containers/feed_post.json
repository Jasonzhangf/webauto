    {
      "type": "extract",
      "config": {
        "fields": {
          "url": "a[href*='weibo.com'][href*='status']",
          "author": ".head_nick_24eEB, .woo-box-flex.woo-box-alignCenter a",
          "authorUrl": ".head_nick_24eEB, .woo-box-flex.woo-box-alignCenter a",
          "content": ".detail_wbtext_4CRf9",
