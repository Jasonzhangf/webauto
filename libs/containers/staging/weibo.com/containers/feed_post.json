{
  "id": "feed_post",
  "name": "微博帖子卡片",
  "website": "weibo.com",
  "selectors": [
    {
      "classes": ["Feed_body_3R0rO"],
      "variant": "primary",
      "score": 0.9
    },
    {
      "classes": ["woo-item-flex"],
      "variant": "backup",
      "score": 0.7
    }
  ],
  "children": ["expand_button", "post_link"],
  "capabilities": ["extract"],
  "operations": [
    {
      "type": "find-child"
