        },
        "include_text": true,
        "max_items": 1,
        "whitelist": {
          "prefix": ["https://weibo.com/"]
        },
        "blacklist": {
          "contains": ["/u/", "/hot", "/search", "/profile", "/login"],
          "suffix": ["/home", "/explore"]
