{
  "id": "xiaohongshu_detail.modal_shell",
  "name": "详情模态框",
  "type": "modal",
  "capabilities": [
    "highlight",
    "scroll",
    "find-child"
  ],
  "children": [
    "xiaohongshu_detail.header",
    "xiaohongshu_detail.content",
    "xiaohongshu_detail.gallery",
    "xiaohongshu_detail.comment_section"
  ],
  "selectors": [
    {
      "css": ".note-detail-mask",
      "variant": "primary",
      "score": 1.0
    },
    {
      "css": ".note-detail, .detail-container, .media-container",
      "variant": "backup",
      "score": 0.85
    }
  ],
  "metadata": {
    "required_descendants_any": [
      ".note-content",
      ".content",
      ".media-container",
      ".comments-el",
      ".comment-item"
    ]
  },
  "operations": [
    {
      "type": "highlight",
      "config": {
        "style": "2px solid #34a853",
        "duration": 1600
      }
    },
    {
      "type": "click",
      "config": {
        "selector": ".note-detail-mask .close-box, .note-detail-mask .close-circle",
        "comment": "点击详情模态右上角关闭按钮"
      }
    },
    {
      "type": "scroll",
      "config": {
        "direction": "down",
        "distance": 400,
        "repeat": 1
      }
    },
    {
      "type": "find-child",
      "config": {
        "container_id": "xiaohongshu_detail.header"
      }
    },
    {
      "type": "find-child",
      "config": {
        "container_id": "xiaohongshu_detail.content"
      }
    },
    {
      "type": "find-child",
      "config": {
        "container_id": "xiaohongshu_detail.gallery"
      }
    },
    {
      "type": "find-child",
      "config": {
        "container_id": "xiaohongshu_detail.comment_section"
      }
    }
  ]
}
