{
  "id": "xiaohongshu_detail.comment_section.comment_item",
  "name": "评论项",
  "type": "item",
  "capabilities": [
    "highlight",
    "extract",
    "click"
  ],
  "selectors": [
    {
      "css": ".comment-item",
      "variant": "primary",
      "score": 1.0
    },
    {
      "css": "[class*='comment-item'], .Comment_item",
      "variant": "backup",
      "score": 0.8
    }
  ],
  "extractors": {
    "user_name": {
      "selectors": [
        ".name",
        ".username",
        ".user-name"
      ],
      "attr": "textContent"
    },
    "user_link": {
      "selectors": [
        "a[href*='/user/profile/']"
      ],
      "attr": "href"
    },
    "user_id": {
      "selectors": [
        "a[data-user-id]",
        "[data-user-id]"
      ],
      "attr": "data-user-id"
    },
    "text": {
      "selectors": [
        ".content",
        ".comment-content",
        "p"
      ],
      "attr": "textContent"
    },
    "timestamp": {
      "selectors": [
        ".date",
        ".time",
        "[class*='time']"
      ],
      "attr": "textContent"
    },
    "like_status": {
      "selectors": [
        ".like-wrapper"
      ],
      "attr": "class"
    },
    "like_content": {
      "selectors": [
        ".like-wrapper .count"
      ],
      "attr": "textContent"
    }
  },
  "operations": [
    {
      "type": "highlight",
      "config": {
        "style": "2px solid #ea4335",
        "duration": 1000
      }
    },
    {
      "type": "extract",
      "config": {
        "fields": [
          "user_name",
          "user_link",
          "user_id",
          "text",
          "timestamp",
          "like_status",
          "like_content"
        ]
      }
    },
    {
      "type": "click",
      "config": {
        "target": ".like-wrapper",
        "offset": { "x": 0.5, "y": 0.5 },
        "delayMs": 100
      }
    }
  ]
}
