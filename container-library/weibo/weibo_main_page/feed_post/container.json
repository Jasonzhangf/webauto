{
  "id": "weibo_main_page.feed_post",
  "name": "微博单条帖子",
  "type": "content",
  "capabilities": [
    "highlight",
    "find-child",
    "extract"
  ],
  "page_patterns": [
    "weibo.com",
    "!*login*",
    "!*passport*"
  ],
  "selectors": [
    {
      "css": "article[class*='Feed_wrap_']",
      "variant": "primary",
      "score": 1
    },
    {
      "css": "div[class*='wbpro-scroller-item']",
      "variant": "structure",
      "score": 0.8
    },
    {
      "css": "div[class*='vue-recycle-scroller__item-view']",
      "variant": "fallback",
      "score": 0.6
    }
  ],
  "metadata": {
    "required_descendants_any": [
      "a[href*='weibo.com']",
      "header[class*='WB_feed_detail']"
    ]
  },
  "operations": [
    {
      "type": "highlight",
      "config": {
        "style": "3px solid #fbbc05",
        "duration": 1500
      }
    },
    {
      "type": "extract",
      "config": {
        "target": "links",
        "selector": "a[href*='weibo.com']",
        "include_text": true,
        "max_items": 32,
        "whitelist": {
          "pattern": [
            "^https://weibo\\.com/\\d+/[A-Z][A-Za-z0-9]+$"
          ]
        },
        "blacklist": {
          "contains": [
            "javascript:",
            "help.weibo.com",
            "passport.weibo.com",
            "javascript:",
            "help.weibo.com",
            "passport.weibo.com"
          ],
          "suffix": [
            "#"
          ],
          "pattern": [
            "^https://weibo\\.com/u/"
          ]
        }
      }
    },
    {
      "type": "extract",
      "config": {
        "target": "summary",
        "selector": "article",
        "fields": {
          "author": "header a[href*='weibo.com']",
          "content": "div[class*='detail_wbtext']",
          "timestamp": "time"
        }
      }
    }
  ],
  "children": [
    "weibo_main_page.feed_post.expand_button"
  ]
}