{
  "id": "weibo_main_page",
  "name": "微博主页面（已登录）",
  "type": "page",
  "capabilities": [
    "scroll",
    "highlight",
    "find-child"
  ],
  "page_patterns": [
    "weibo.com",
    "!*login*",
    "!*passport*"
  ],
  "children": [
    "weibo_main_page.feed_list"
  ],
  "selectors": [
    {
      "css": "#app > div[class*='Frame_wrap_']",
      "variant": "primary",
      "score": 1.0
    },
    {
      "css": "div[class*='Frame_wrap_']",
      "variant": "fallback",
      "score": 0.8
    },
    {
      "css": "#app",
      "variant": "root",
      "score": 0.5
    }
  ],
  "metadata": {
    "required_descendants_any": [
      "div[class*='Frame_top_']",
      "div[class*='Frame_content_']",
      "div[class*='Home_feed_']",
      "main[class*='Main_wrap_']"
    ],
    "excluded_descendants_any": [
      "div[class*='LoginCard']",
      "div[class*='Passport_box']"
    ]
  },
  "operations": [
    {
      "type": "highlight",
      "config": {
        "style": "2px solid #fbbc05",
        "duration": 1500
      }
    },
    {
      "type": "find-child",
      "config": {
        "container_id": "weibo_main_page.feed_list"
      }
    },
    {
      "type": "scroll",
      "config": {
        "direction": "down",
        "distance": 500
      }
    }
  ]
}
