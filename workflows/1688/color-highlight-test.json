{
  "name": "颜色高亮测试",
  "description": "测试蓝色锚点高亮和绿色目标高亮，以及自动清理功能",
  "version": "1.0.0",
  "anchor": {
    "hostFilter": "1688.com",
    "selectors": [".userAvatarLogo img"],
    "requireVisible": true,
    "maxWaitMs": 60000,
    "pollIntervalMs": 1500,
    "highlight": true,
    "persistHighlight": true,
    "highlightLabel": "ANCHOR",
    "highlightColor": "#007AFF"
  },
  "nodes": [
    {
      "id": "start",
      "type": "StartNode",
      "next": ["anchor"]
    },
    {
      "id": "anchor",
      "type": "AnchorPointNode",
      "config": {
        "hostFilter": "1688.com",
        "selectors": [".userAvatarLogo img"],
        "requireVisible": true,
        "maxWaitMs": 60000,
        "pollIntervalMs": 1500,
        "highlight": true,
        "persistHighlight": true,
        "highlightLabel": "ANCHOR",
        "highlightColor": "#007AFF"
      },
      "next": ["target"]
    },
    {
      "id": "target",
      "type": "EventDrivenOptionalClickNode",
      "config": {
        "hostFilter": "1688.com",
        "selectors": [".search-btn", "button"],
        "highlight": true,
        "persistHighlight": false,
        "highlightColor": "#34c759",
        "highlightLabel": "TARGET",
        "maxWaitMs": 10000,
        "click": false
      },
      "next": ["wait"]
    },
    {
      "id": "wait",
      "type": "WaitNode",
      "config": {
        "duration": 3000
      },
      "next": ["end"]
    },
    {
      "id": "end",
      "type": "EndNode",
      "config": {
        "cleanupHighlights": true,
        "persistSession": false
      }
    }
  ]
}