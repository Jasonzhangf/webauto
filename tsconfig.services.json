{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "outDir": "./dist",
    "noEmit": false,
    "allowJs": true,
    "allowImportingTsExtensions": false,
    "rootDir": "."
  },
  "include": [
    "services/browser-service/**/*.ts",
    "services/unified-api/**/*.ts",
    "services/engines/**/*.ts",
    "services/shared/**/*.ts",
    "services/**/*.d.ts",
    "services/shared/**/*.d.ts",
    "modules/container-registry/**/*.ts",
    "modules/workflow/**/*.ts",
    "modules/xiaohongshu/app/**/*.ts",
    "sharedmodule/engines/**/*.ts",
    "libs/browser/**/*.ts",
    "src/server.ts",
    "services/controller/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "libs/browser/tests/**"
  ]
}
