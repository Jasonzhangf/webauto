{
  "name": "weibo-hot-topic-comments-test",
  "version": "1.0.0",
  "description": "微博热门话题嵌套评论测试",
  "operations": [
    {
      "type": "cookie.load",
      "name": "加载微博Cookie",
      "config": {
        "domain": "weibo.com",
        "cookiePath": "./cookies/weibo-cookies-updated.json"
      }
    },
    {
      "type": "page.navigate",
      "name": "导航到热门话题页面",
      "config": {
        "url": "https://weibo.com/hot/weibo/102803",
        "waitUntil": "domcontentloaded",
        "timeout": 30000
      }
    },
    {
      "type": "page.wait",
      "name": "等待页面加载",
      "config": {
        "duration": 3000
      }
    },
    {
      "type": "weibo.comments.enhanced",
      "name": "热门话题评论提取",
      "config": {
        "maxComments": 1000,
        "maxScrolls": 100,
        "scrollDelay": 2000,
        "maxNoGrowth": 8,
        "maxClickFailures": 3,
        "enableLogging": true,
        "commentContainer": ".Feed_body_3R0rO, .Feed_body_2wP8c, [class*=\"comment\"], .comment_list, [class*=\"comment\"]",
        "timeout": 30000
      }
    }
  ],
  "output": {
    "savePath": "./test-results/hot-topic-comments-result.json",
    "format": "json",
    "includeOperationLog": true,
    "includeClickLog": true,
    "includeErrorLog": true
  }
}