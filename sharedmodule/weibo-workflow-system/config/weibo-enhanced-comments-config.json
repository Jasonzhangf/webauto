{
  "name": "weibo-enhanced-comments-config",
  "version": "1.0.0",
  "description": "微博增强评论提取配置",
  "operations": [
    {
      "type": "cookie.load",
      "name": "加载微博Cookie",
      "config": {
        "domain": "weibo.com",
        "cookiePath": "./cookies/weibo-cookies-updated.json"
      }
    },
    {
      "type": "page.navigate",
      "name": "导航到微博页面",
      "config": {
        "url": "https://weibo.com/2656274875/Q4qEJBc6z",
        "waitUntil": "domcontentloaded",
        "timeout": 30000
      }
    },
    {
      "type": "page.wait",
      "name": "等待页面加载",
      "config": {
        "duration": 3000
      }
    },
    {
      "type": "weibo.comments.enhanced",
      "name": "增强评论提取",
      "config": {
        "maxComments": 500,
        "maxScrolls": 50,
        "scrollDelay": 2000,
        "maxNoGrowth": 5,
        "maxClickFailures": 3,
        "enableLogging": true,
        "commentContainer": ".Feed_body_3R0rO, .Feed_body_2wP8c, [class*=\"comment\"], .comment_list, [class*=\"comment\"]",
        "timeout": 30000
      }
    }
  ],
  "output": {
    "savePath": "./test-results/enhanced-comments-result.json",
    "format": "json",
    "includeOperationLog": true,
    "includeClickLog": true,
    "includeErrorLog": true
  }
}