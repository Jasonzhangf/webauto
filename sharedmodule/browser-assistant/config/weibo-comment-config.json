{
  "site": "weibo",
  "name": "微博评论提取配置",
  "description": "针对微博页面的评论提取配置",
  "version": "1.0.0",
  
  "pageInfo": {
    "titleSelector": "title",
    "authorSelector": "h1, h2, h3, [class*='title'], [class*='author']",
    "contentSelector": "body"
  },
  
  "expandActions": [
    {
      "name": "展开评论",
      "selectors": [
        "text='展开'",
        "text='查看更多'",
        "text='更多评论'",
        "text='加载更多'",
        "[class*='expand']",
        "[class*='more']",
        "[class*='load']",
        "button:has-text('展开')",
        "button:has-text('更多')",
        "button:has-text('加载')",
        "a:has-text('展开')",
        "a:has-text('更多')"
      ],
      "maxClicks": 20,
      "waitTime": 1000
    }
  ],
  
  "scrollActions": {
    "enabled": true,
    "scrollCount": 5,
    "scrollInterval": 2000,
    "scrollTo": "bottom"
  },
  
  "commentSelectors": [
    {
      "name": "微博评论主容器",
      "selector": "[class*='comment']",
      "priority": 1
    },
    {
      "name": "回复容器",
      "selector": "[class*='reply']",
      "priority": 2
    },
    {
      "name": "Feed项",
      "selector": "[class*='feed']",
      "priority": 3
    },
    {
      "name": "列表项",
      "selector": "[class*='item']",
      "priority": 4
    },
    {
      "name": "带头像和冒号的元素",
      "selector": "div:has(img):has-text(':')",
      "priority": 5
    },
    {
      "name": "带头像和来源的元素",
      "selector": "div:has(img):has-text('来自')",
      "priority": 6
    },
    {
      "name": "带头像和赞的元素",
      "selector": "div:has(img):has-text('赞')",
      "priority": 7
    },
    {
      "name": "评论节点类型",
      "selector": "[node-type*='comment']",
      "priority": 8
    },
    {
      "name": "数据类型评论",
      "selector": "[data-type*='comment']",
      "priority": 9
    },
    {
      "name": "评论列表容器",
      "selector": "[class*='list'] > div",
      "priority": 10
    },
    {
      "name": "评论容器",
      "selector": "[class*='comments'] > div",
      "priority": 11
    },
    {
      "name": "评论列表",
      "selector": "[class*='comment-list'] > div",
      "priority": 12
    },
    {
      "name": "深度嵌套评论",
      "selector": "div > div > div:has(img):has-text(':')",
      "priority": 13
    }
  ],
  
  "commentExtraction": {
    "authorSelector": "[class*='name'], [class*='user'], [class*='author'], a",
    "avatarSelector": "img",
    "timeSelector": "time, [data-time], [class*='time']",
    "likeSelector": "button:has-text('赞'), [class*='like']",
    "replySelector": "button:has-text('回复'), [class*='reply']",
    
    "filters": {
      "minWidth": 50,
      "minHeight": 20,
      "minTextLength": 10,
      "maxTextLength": 1000,
      "excludeKeywords": [
        "热搜",
        "榜单", 
        "排行",
        "播放视频",
        "加载完毕",
        "直播",
        "全屏",
        "静音",
        "复制视频地址",
        "小窗播放",
        "高清",
        "标清",
        "倍速",
        "关注",
        "精选",
        "超话",
        "相册",
        "文章"
      ],
      "requireColon": true,
      "requireAvatar": false,
      "requireTimestamp": false
    },
    
    "contentProcessing": {
      "removeAuthorFromContent": true,
      "extractTimeFromText": true,
      "cleanWhitespace": true
    }
  },
  
  "pagination": {
    "loadMoreSelector": "text='加载更多', text='下一页', [class*='load-more'], [class*='next-page']",
    "maxPages": 10,
    "waitTime": 2000
  },
  
  "output": {
    "format": "json",
    "includeRawHtml": false,
    "includeElementInfo": false,
    "maxCommentsToShow": 100
  }
}