{
  "name": "Anthropic Test Server Config",
  "version": "1.0.0",
  "description": "Configuration for testing Anthropic input with our test server",
  "providers": [
    {
      "name": "test-anthropic",
      "type": "anthropic",
      "api_base_url": "http://127.0.0.1:3000/v1",
      "api_key": "test-api-key",
      "models": [
        "claude-3-5-sonnet-20240620",
        "claude-3-opus-20240229"
      ],
      "default_model": "claude-3-5-sonnet-20240620",
      "transformer": {
        "type": "pass-through"
      }
    }
  ],
  "routes": [
    {
      "pattern": "/v1/messages",
      "provider": "test-anthropic",
      "method": "POST"
    }
  ],
  "logging": {
    "level": "debug",
    "file": "./logs/test-server.log"
  }
}