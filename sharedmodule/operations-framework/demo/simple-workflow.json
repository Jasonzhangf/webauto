{
  "id": "simple-browser-workflow",
  "name": "Simple Browser Workflow",
  "description": "A simple workflow that starts browser and navigates to a page",
  "version": "1.0.0",
  "variables": {
    "targetUrl": "https://example.com",
    "browserHeadless": false,
    "viewportWidth": 1280,
    "viewportHeight": 720
  },
  "steps": [
    {
      "id": "start-browser",
      "name": "Start Browser",
      "operator": "browser",
      "params": {
        "action": "start",
        "headless": "${browserHeadless}",
        "viewport": {
          "width": "${viewportWidth}",
          "height": "${viewportHeight}"
        }
      }
    },
    {
      "id": "navigate-to-page",
      "name": "Navigate to Page",
      "operator": "navigation",
      "params": {
        "action": "navigate",
        "url": "${targetUrl}",
        "timeout": 30000
      }
    },
    {
      "id": "get-page-info",
      "name": "Get Page Information",
      "operator": "navigation",
      "params": {
        "action": "getInfo"
      }
    }
  ]
}