{
  "name": "@webauto/operations-framework",
  "version": "1.0.0",
  "description": "WebAuto Operations Framework - A comprehensive micro-operations system for web automation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist coverage test-temp test-logs test-output test-data",
    "prebuild": "npm run clean",
    "pretest": "npm run typecheck",
    "prepare": "npm run build",
    "dev": "tsc --watch",
    "start": "node dist/index.js"
  },
  "keywords": [
    "web-automation",
    "operations",
    "workflow",
    "task-orchestration",
    "typescript",
    "micro-operations",
    "automation",
    "daemon",
    "webauto"
  ],
  "author": "WebAuto Team",
  "license": "MIT",
  "dependencies": {
    "@types/winston": "^2.4.4",
    "chokidar": "^3.6.0",
    "commander": "^14.0.1",
    "eventemitter3": "^5.0.1",
    "node-cron": "^3.0.3",
    "playwright": "^1.40.0",
    "systeminformation": "^5.21.22",
    "winston": "^3.17.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "@types/node-cron": "^3.0.11",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^6.13.1",
    "@typescript-eslint/parser": "^6.13.1",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "typescript": "^5.3.2"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/webauto/operations-framework.git"
  },
  "bugs": {
    "url": "https://github.com/webauto/operations-framework/issues"
  },
  "homepage": "https://github.com/webauto/operations-framework#readme"
}
