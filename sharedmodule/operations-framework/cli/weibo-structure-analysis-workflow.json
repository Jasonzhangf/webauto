{
  "id": "weibo-structure-analysis-workflow",
  "name": "Weibo Homepage Structure Analysis",
  "description": "Analyze Weibo homepage structure to identify post containers and link elements",
  "version": "1.0",
  "variables": {
    "cookiePath": "~/.webauto/cookies/weibo-cookies.json",
    "targetUrl": "https://weibo.com",
    "browserHeadless": false,
    "timeout": 60000,
    "outputFile": "./weibo-structure-analysis.json"
  },
  "steps": [
    {
      "id": "start-browser",
      "name": "Start Browser Instance",
      "operator": "browser",
      "params": {
        "action": "start",
        "headless": "${browserHeadless}",
        "viewport": {
          "width": 1920,
          "height": 1080
        }
      }
    },
    {
      "id": "load-cookies",
      "name": "Load Weibo Cookies",
      "operator": "cookie",
      "params": {
        "action": "load",
        "path": "${cookiePath}",
        "domain": "weibo.com"
      }
    },
    {
      "id": "navigate-to-weibo",
      "name": "Navigate to Weibo",
      "operator": "navigation",
      "params": {
        "action": "navigate",
        "url": "${targetUrl}",
        "waitUntil": "domcontentloaded",
        "timeout": "${timeout}"
      }
    },
    {
      "id": "wait-for-content",
      "name": "Wait for Content Load",
      "operator": "navigation",
      "params": {
        "action": "wait",
        "duration": 5000
      }
    },
    {
      "id": "analyze-structure",
      "name": "Analyze Page Structure",
      "operator": "navigation",
      "params": {
        "action": "analyzeStructure",
        "outputFile": "${outputFile}"
      }
    },
    {
      "id": "save-cookies",
      "name": "Save Updated Cookies",
      "operator": "cookie",
      "params": {
        "action": "save",
        "path": "${cookiePath}",
        "domain": "weibo.com"
      }
    },
    {
      "id": "stop-browser",
      "name": "Stop Browser",
      "operator": "browser",
      "params": {
        "action": "stop"
      }
    }
  ]
}