{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "outDir": "./build",
    "declaration": false,
    "sourceMap": true,
    "isolatedModules": true,
    "allowJs": false,
    "checkJs": false
  },
  "include": ["src/**/*"],
  "ts-node": { "esm": true, "experimentalSpecifierResolution": "node" }
}