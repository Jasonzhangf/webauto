{
  "name": "openai-compatible-providers-framework",
  "version": "0.1.0",
  "description": "Framework for creating OpenAI-compatible providers with configuration-driven compatibility. Includes support for OpenAI, iFlow, and LMStudio with extensible compatibility modules.",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist/**/*",
    "src/**/*",
    "config/**/*",
    "COMPATIBILITY_GUIDE.md",
    "USAGE_EXAMPLES.md",
    "README.md"
  ],
  "scripts": {
    "build": "node scripts/build.js",
    "build:watch": "tsc --watch",
    "build:prod": "node scripts/build.js --skip-tests",
    "clean": "rimraf dist",
    "clean:all": "rimraf dist node_modules package-lock.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint . --ext .js,.ts,.json",
    "lint:fix": "eslint . --ext .js,.ts,.json --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "prepare": "npm run build",
    "prepublishOnly": "npm run build && npm run test && npm run lint",
    "version": "npm run build && git add -A dist",
    "postversion": "git push && git push --tags",
    "publish:safe": "node scripts/publish.js",
    "publish:quick": "npm run build && npm publish",
    "release": "node scripts/publish.js",
    "release:patch": "npm version patch && npm publish",
    "release:minor": "npm version minor && npm publish",
    "release:major": "npm version major && npm publish",
    "release:dry": "node scripts/publish.js --dry-run",
    "docs": "npx typedoc src/index.ts --out docs/",
    "check": "npm run lint && npm run test && npm run format:check",
    "security": "npm audit",
    "security:fix": "npm audit fix",
    "dev:setup": "npm install && npm install --save-dev typescript @types/node jest eslint prettier @types/jest"
  },
  "keywords": [
    "openai",
    "providers",
    "compatibility",
    "api",
    "framework"
  ],
  "author": "webauto",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^9.1.2",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^29.0.0",
    "prettier": "^3.6.2",
    "rimraf": "^5.0.0",
    "typedoc": "^0.25.0",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}
