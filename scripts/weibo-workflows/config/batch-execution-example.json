{
  "version": "1.0.0",
  "description": "批量工作流执行示例配置",
  "settings": {
    "headless": false,
    "timeout": 120000,
    "delay": 3000,
    "continueOnError": true,
    "output": "./output/batch-results"
  },
  "workflows": [
    {
      "name": "首页热门内容抓取",
      "type": "weibo-homepage",
      "enabled": true,
      "priority": 1,
      "options": {
        "maxPosts": 30,
        "saveResults": true
      }
    },
    {
      "name": "技术相关搜索",
      "type": "weibo-search",
      "enabled": true,
      "priority": 2,
      "options": {
        "keyword": "技术",
        "maxResults": 20,
        "sortBy": "recent",
        "includeRelated": true
      }
    },
    {
      "name": "人工智能搜索",
      "type": "weibo-search",
      "enabled": true,
      "priority": 3,
      "options": {
        "keyword": "人工智能",
        "maxResults": 15,
        "sortBy": "hot",
        "timeRange": "week"
      }
    },
    {
      "name": "区块链搜索",
      "type": "weibo-search",
      "enabled": true,
      "priority": 4,
      "options": {
        "keyword": "区块链",
        "maxResults": 15,
        "sortBy": "recent"
      }
    },
    {
      "name": "新闻热点搜索",
      "type": "weibo-search",
      "enabled": true,
      "priority": 5,
      "options": {
        "keyword": "新闻",
        "maxResults": 25,
        "sortBy": "hot"
      }
    }
  ],
  "scheduling": {
    "enabled": false,
    "cronExpression": "0 */6 * * *", // 每6小时执行一次
    "timezone": "Asia/Shanghai"
  },
  "notifications": {
    "enabled": false,
    "onSuccess": false,
    "onError": true,
    "webhook": null,
    "email": null
  },
  "output": {
    "format": "json",
    "includeMetadata": true,
    "includeExecutionStats": true,
    "compressResults": false,
    "filenamePattern": "batch-{timestamp}-{sequence}"
  }
}